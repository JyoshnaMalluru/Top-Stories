 <% layout('/layouts/boilerplate') -%> 

<div class="cards-container" id="newsContainer">
  <div class="container d-flex justify-content-center mt-3" id="alert-area" style="margin-top: 20px;">
  </div>
  <% for(let news of data){ %>
    <% if(name == news.source){ %>
      <div class="card">
        <div class="card-header">
          <h2 data-name="card"><%= news.source %></h2>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= news.title %></h5>
          <a href="<%= news.url %>" target="_blank"class="btn btn-secondary moredetails">More Details</a>
          <button class="btn btn-outline-secondary bookmark-btn"
                  data-title="<%= news.title %>"
                  data-url="<%= news.url %>"
                  data-source="<%= news.source %>"
                  data-date="<%= news.published_at %>"
                  onclick="toggleBookmark(this)">
            ğŸ”–
          </button>
        </div>
        <div class="card-footer">
          <h6>Published On: <%= news.published_at.toString().split("T")[0] %></h6>
          <h6>Source: <%= news.source %></h6>
        </div>
      </div>
    <% } %>
  <% } %>
</div>

